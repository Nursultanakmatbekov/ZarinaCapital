<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/margin_16"
    tools:context=".api.presentation.ui.fragments.SignInFragment">

    <include
        android:id="@+id/loading"
        layout="@layout/loading"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:contentDescription="@string/app_icon_content_description"
        android:src="@drawable/app_logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email"
        style="@style/Widget.TextInputLayout.OutlinedBox.Overlay"
        android:layout_marginTop="@dimen/margin_50"
        app:expandedHintEnabled="false"
        app:hintEnabled="false"
        app:placeholderText="@string/email_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            style="@style/Widget.TextInputEditText.OutlinedBox.Overlay"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        style="@style/Widget.TextInputLayout.OutlinedBox.Overlay"
        android:layout_marginTop="@dimen/margin_8"
        app:endIconDrawable="@drawable/ic_password_visibility"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/dark_grey"
        app:expandedHintEnabled="false"
        app:hintEnabled="false"
        app:placeholderText="@string/password_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            style="@style/Widget.TextInputEditText.OutlinedBox.Overlay"
            android:inputType="textPassword"
            android:paddingVertical="@dimen/padding_16" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_forgot_your_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_12"
        android:text="@string/forgot_your_password"
        android:textAppearance="@style/TextAppearance.AppCompat.Inter.Regular.PreMedium"
        android:textColor="@color/blue" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sing_in"
        style="@style/Widget.MaterialButton.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40"
        android:text="@string/sign_in" />

    <LinearLayout
        android:id="@+id/or_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginBottom="@dimen/margin_32"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/grey_7" />

        <TextView
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_8"
            android:text="@string/or"
            android:textAppearance="@style/TextAppearance.AppCompat.Inter.Regular.Medium"
            android:textColor="@color/grey_7" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/grey_7" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sing_up"
        style="@style/Widget.MaterialButton.Outlined.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up" />

</LinearLayout>