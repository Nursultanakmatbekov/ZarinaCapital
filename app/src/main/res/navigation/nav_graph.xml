<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    tools:ignore="InvalidNavigation">

    <fragment
        android:id="@+id/auth_flow"
        android:name="com.ren.auth.api.presentation.ui.fragments.AuthFlowFragment"
        tools:layout="@layout/fragment_auth_flow">
        <action
            android:id="@+id/action_auth_flow_to_courses"
            app:destination="@id/courses"
            app:popUpTo="@id/nav_graph.xml"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/my_courses"
        android:name="com.ren.mycourses.api.presentation.ui.fragments.MyCoursesFragment"
        android:label="@string/my_courses_screen"
        tools:layout="@layout/fragment_my_courses" />

    <include app:graph="@navigation/courses" />
    <include app:graph="@navigation/menu" />

</navigation>